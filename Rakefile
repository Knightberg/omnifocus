# -*- ruby -*-

require 'rubygems'
require 'hoe'

Hoe.plugin :seattlerb

Hoe.spec "omnifocus" do
  developer "Ryan Davis", "ryand-ruby@zenspider.com"

  extra_deps << ["rb-appscript", "~> 0.5.3"]
  extra_deps << ["mechanize",    "~> 0.9.0"]

  self.rubyforge_name = "seattlerb"

  pluggable!
end

